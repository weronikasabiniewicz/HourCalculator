<Window x:Class="HourCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="252.631" Width="246.053" ResizeMode="CanMinimize">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="115*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="88*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="_startButton" Content="START" Margin="10,10,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="32" Grid.Row="1" Background="#FF5888CD" FontSize="18" FontFamily="Microsoft YaHei"/>
        <Label x:Name="_date" Content="Date:" HorizontalAlignment="Left" Height="28" Margin="10,24,0,0" VerticalAlignment="Top" Width="54" Grid.Column="0" Background="#FFD6C8C8"/>
        <Label x:Name="_time" Content="Time:" HorizontalAlignment="Left" Height="28" Margin="10,52,0,0" VerticalAlignment="Top" Width="54" Grid.Column="0" Background="#FFD6C8C8"/>
        <Label x:Name="_dateValue" Content="{Binding Path=DateValue}" Margin="0,24,10,36.667" Height="28" Grid.Column="1"/>
        <Label x:Name="_timeValue" Content="{Binding Path=TimeValue, UpdateSourceTrigger=PropertyChanged}" Height="28" Margin="0,52,10,8.667" Grid.Column="1" />
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2" Margin="10,24,10,0" Height="56" VerticalAlignment="Top"/>
        <Label Content="Now:" HorizontalAlignment="Left" Height="24" Margin="10,0,0,0" VerticalAlignment="Top" Width="54" FontFamily="Microsoft YaHei"/>


    </Grid>
</Window>
