<Window x:Class="HourCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="252.631" Width="246.053" ResizeMode="CanMinimize">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="88*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top" Width="79" Grid.ColumnSpan="2" Height="20"/>
        <Label x:Name="_date" Content="Date:" HorizontalAlignment="Left" Height="28" Margin="10,38,0,0" VerticalAlignment="Top" Width="54" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Label x:Name="_time" Content="Time:" HorizontalAlignment="Left" Height="28" Margin="10,66,0,0" VerticalAlignment="Top" Width="54" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Label x:Name="_dateValue" Content="{Binding Path=DateValue}" Grid.Column="1" Margin="0,38,10,138" Height="28" HorizontalAlignment="Right" Width="147"/>
        <Label x:Name="_timeValue" Content="{Binding Path=TimeValue, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Height="28" Margin="0,66,10,110" HorizontalAlignment="Right" Width="147" />
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2" Margin="10,38,10,0" Height="56" VerticalAlignment="Top"/>
        <Label Grid.ColumnSpan="2" Content="Now:" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="54"/>


    </Grid>
</Window>
