<Window x:Class="HourCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="252.631" Width="246.053" ResizeMode="CanMinimize">
    <Grid HorizontalAlignment="Left" Height="222" VerticalAlignment="Top" Width="246" Margin="0,0,-6,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="88*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" Width="79" Grid.ColumnSpan="2" Height="20"/>
        <Label x:Name="_date" Content="Date" HorizontalAlignment="Left" Height="28" Margin="10,10,0,0" VerticalAlignment="Top" Width="47" />
        <Label x:Name="_time" Content="Time" HorizontalAlignment="Left" Height="28" Margin="10,38,0,0" VerticalAlignment="Top" Width="47" />
        <Label x:Name="_dateValue" Content="{Binding Path=DateValue}" Margin="0,11,23,184" Grid.Column="1"/>
        <Label x:Name="_timeValue" Content="{Binding Path=TimeValue, UpdateSourceTrigger=PropertyChanged}" Margin="0,38,23,156" Grid.Column="1" />


    </Grid>
</Window>
